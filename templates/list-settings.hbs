<form>
  <div class="header">
    <label class="checkbox" data-tooltip="CLASS_PAGES.SpellcastingHint">
      <input type="checkbox" class="prog">
      {{localize "CLASS_PAGES.Spellcasting"}}
    </label>
    {{#each classes}}
    <div class="label class" data-identifier="{{identifier}}" data-tooltip="{{name}}" {{#if prog}}data-prog="true"{{/if}}>{{name}}</div>
    {{/each}}
  </div>

  <div class="filter">
    <input type="text" id="spell-list-filter" placeholder="{{localize 'CLASS_PAGES.Search'}}">
  </div>

  <div class="spells">
    {{#each spells}}
    <div class="form-group stacked" data-uuid="{{uuid}}">
      <a class="label" data-tooltip="{{name}}" data-action="render" data-school="{{system.school}}" data-level="{{system.level}}">
        {{name}}
      </a>
      {{#each classes as |cls key|}}
      <label class="checkbox spell">
        <input type="checkbox" value="{{../uuid}}" name="{{key}}" {{checked cls.has}} {{#if cls.prog}}data-prog="true"{{/if}}>
      </label>
      {{/each}}
    </div>
    {{/each}}
  </div>

  <button type="submit">
    <i class="fa-solid fa-save"></i> {{localize "Save"}}
  </button>
</form>
